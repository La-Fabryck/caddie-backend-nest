{
  "moduleFileExtensions": ["js", "json", "ts"],
  "modulePaths": ["<rootDir>"],
  "rootDir": "./..",
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/src/$1"
  },
  "setupFilesAfterEnv": ["./test/jest.setup.ts"],
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s?$": [
      "@swc/jest",
      {
        "jsc": {
          "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true
          }
        }
      }
    ]
  },
  "extensionsToTreatAsEsm": [".ts"]
}
